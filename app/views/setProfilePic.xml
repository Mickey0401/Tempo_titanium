<Alloy>
	<Window>
		<Require id="navigation" src="navBar"></Require>
		<View width="Ti.UI.FILL" height="Ti.UI.FILL" top="10%" backgroundColor="white" layout="vertical">
			<Label class="headingText" top="10" textAlign="center">Set a profile photo</Label>
			<Label class="blueSmall" top="3">Choose from gallery or take a photo using camera</Label>
			<ImageView top="3" width="90%" image="/images/headerDivide.png"></ImageView>
			<View onClick="uploadImage"  viewShadowOffset="0,0" borderRadius="100" height="200" width="200" borderRadius="100"  top="10%">
				<ImageView id="userAvatarImg"  image="/images/setPhotoIcon.png"></ImageView>
			</View>
			<Label id="continueProfile" height="45" width="70%" top="10%" borderRadius="22.5" backgroundColor="2dc1ee" textAlign="center">Continue</Label>
		</View>
	</Window>
</Alloy>  