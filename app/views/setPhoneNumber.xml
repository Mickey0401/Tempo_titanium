<Alloy>
	<Window>
		<Require id="navigation" src="navBar"></Require>
		<View width="Ti.UI.FILL" height="Ti.UI.FILL" top="10%" backgroundColor="white" layout="vertical">
			<Label class="headingText" top="10" textAlign="center">What's your phone number</Label>
			<Label id="skip" class="blueSmall" top="3">Sign up using email instead</Label>
			<ImageView top="3" width="90%" image="/images/headerDivide.png"></ImageView>
			<Label class="lableText" top="15%" left="15%">Phone Number</Label>
			<View height="50" width="Ti.UI.FILL" top="10">
			<TextField class="phoneText" id="phoneTxt" value="" right="20%" top="10"  keyboardType="Titanium.UI.KEYBOARD_TYPE_PHONE_PAD"></TextField>
			<Label class="selectCountry" left="65" top="10">US +1</Label>
			<View height="1" bottom="1" backgroundColor="86eeff" width="70%"></View>
			</View>
			<Label id="confirmNumber" height="45" width="70%" top="15%" borderRadius="22.5" backgroundColor="2dc1ee" textAlign="center">Continue</Label>
		</View>
	</Window>
</Alloy>