<Alloy>
	<Window>
		<Require id="navigation" src="navBar"></Require>
		<View width="Ti.UI.FILL" height="Ti.UI.FILL" top="10%" backgroundColor="white" layout="vertical">
			<Label class="headingText" top="10" textAlign="center">Forgot Password?</Label>
			<Label class="blueSmall" top="3">Please enter either Email address or Phone number</Label>
			<ImageView top="3" width="90%" image="/images/headerDivide.png"></ImageView>
			<Label class="lableText" top="25" left="15%">Email</Label>
			<TextField  autocorrect="false" autocapitalization="false" id="emailId" width="70%" class="infoText" value=""></TextField>
			<View height="1" top="0" backgroundColor="86eeff" width="70%"></View>
			
			<Label class="blueSmall" top="25">- OR -</Label>
			
			<Label class="lableText" top="25" left="15%">Phone number</Label>
			<TextField  autocorrect="false" autocapitalization="false" id="phoneNumber" width="70%" class="infoText" value=""></TextField>
			<View height="1" top="0" backgroundColor="86eeff" width="70%"></View>
			
			<Label onClick="forgotPassword" height="45" width="70%" top="15%" borderRadius="22.5" backgroundColor="2dc1ee" textAlign="center">Submit</Label>
		</View>
	</Window>
</Alloy>