<Alloy>
	<Window>
		<Require id="navigation" src="navBar"></Require>
		<View width="Ti.UI.FILL" height="Ti.UI.FILL" top="10%" backgroundColor="white" layout="vertical">
			<Label class="headingText" top="10" textAlign="center">Set a password</Label>
			<Label class="blueSmall" top="3">Your password should be atleast 8 character</Label>
			<ImageView top="3" width="90%" image="/images/headerDivide.png"></ImageView>
			<Label class="lableText" top="15%" left="15%">Password</Label>
			<TextField id="passwordTxt" class="infoText" value="" passwordMask="true">
				<ImageView id="showPass" width="10%" top="13" right="10%" image="/images/eye.png"></ImageView>
			</TextField>
			<View height="1" top="0" backgroundColor="86eeff" width="70%"></View>
			<Label id="confirmPass" height="45" width="70%" top="15%" borderRadius="22.5" backgroundColor="2dc1ee" textAlign="center">Confirm</Label>
		</View>
	</Window>
</Alloy>